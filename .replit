modules = ["flutter"]

[nix]
channel = "stable-24_05"
packages = ["wget", "flutter"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Dashboard App"

[[workflows.workflow]]
name = "Flutter Dashboard App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd example && flutter pub get && flutter run -d web-server --web-hostname=0.0.0.0 --web-port=5000"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd example && flutter pub get && flutter run -d web-server --web-hostname=0.0.0.0 --web-port=5000"]

[[ports]]
localPort = 5000
externalPort = 80
